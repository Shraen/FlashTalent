<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	
	<Button name="FlashTalentButtonTemplate" virtual="true" inherits="SecureHandlerClickTemplate,SecureActionButtonTemplate">
		<Size x="32" y="32"/>
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="$parentIcon" parentKey="icon" setAllPoints="true">
					<TexCoords left="0.075" right="0.925" top="0.075" bottom="0.925"/>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString name="$parentText" parentKey="text" inherits="NumberFont_Outline_Med" text="32" justifyH="CENTER" hidden="true">
					<Size x="32" y="32"/>
					<Anchors>
						<Anchor point="CENTER" x="0" y="-1"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				self.icon:SetVertexColor(0.22, 0.22, 0.22);
				self:RegisterForDrag("LeftButton");
			</OnLoad>
			<OnEnter function="FlashTalentButtonTemplate_OnEnter"/>
			<OnLeave function="FlashTalentButtonTemplate_OnLeave"/>
			<OnDragStart function="FlashTalentButtonTemplate_OnDragStart"/>
			<OnMouseDown function="FlashTalentFrame_OnMouseDown"/>
			<OnMouseUp function="FlashTalentFrame_OnMouseUp"/>
			<OnClick function="FlashTalentButtonTemplate_OnClick"/>
		</Scripts>
	</Button>
	
	<Frame name="FlashTalentTierTemplate" virtual="true">
		<Size x="102" y="34"/>
		<Frames>
			<Button name="$parentTalent1" id="1" parentKey="talent1" inherits="FlashTalentButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent" x="1" y="-1"/>
				</Anchors>
			</Button>
			<Button name="$parentTalent2" id="2" parentKey="talent2" inherits="FlashTalentButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$parentTalent1" x="2" y="0"/>
				</Anchors>
			</Button>
			<Button name="$parentTalent3" id="3" parentKey="talent3" inherits="FlashTalentButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$parentTalent2" x="2" y="0"/>
				</Anchors>
			</Button>
			<Frame name="$parentLockFade" parentKey="lockFade" hidden="true">
				<Size x="102" y="34"/>
				<Anchors>
					<Anchor point="CENTER" x="0" y="0"/>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<Texture name="$parentTexture" setAllPoints="true" file="Interface\AddOns\FlashTalent\media\lockfade">
							<Color r="1" g="1" b="1" a="1"/>
						</Texture>
						<FontString name="$parentLevelText" parentKey="levelText" inherits="NumberFont_Outline_Med" text="" justifyH="CENTER">
							<Size x="75" y="42"/>
							<Anchors>
								<Anchor point="CENTER" x="0" y="-1"/>
							</Anchors>
							<Color r="1" g="0.2" b="0.2"/>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
			<Frame name="$parentGlowFrame" parentKey="glowFrame" enableMouse="false" hidden="true">
				<Size x="102" y="34"/>
				<Anchors>
					<Anchor point="CENTER" relativeTo="$parent" x="0" y="0"/>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<Texture parentKey="topGlowLine" atlas="_talent-green-glow" horizTile="true" alpha="0">
							<Size x="102" y="6"/>
							<Anchors>
								<Anchor point="TOP" x="0" y="-1"/>
							</Anchors>
							<TexCoords left="0" right="1" top="1" bottom="0"/>
						</Texture>
						<Texture parentKey="bottomGlowLine" atlas="_talent-green-glow" horizTile="true" alpha="0">
							<Size x="102" y="12"/>
							<Anchors>
								<Anchor point="BOTTOM" x="0" y="1"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				<Animations>
					<AnimationGroup parentKey="anim" looping="BOUNCE">
						<Alpha childKey="topGlowLine" order="1" fromAlpha="0.3" toAlpha="0.8" smoothing="IN_OUT" duration="1.3"/>
						<Alpha childKey="bottomGlowLine" order="1" fromAlpha="0.3" toAlpha="0.8" smoothing="IN_OUT" duration="1.3"/>
					</AnimationGroup>
				</Animations>
				<Scripts>
					<OnShow>
						self.anim:Play();
					</OnShow>
				</Scripts>
			</Frame>
		</Frames>
	</Frame>
	
	<Font name="FlashTalent_NumberFont_Shadow" inherits="NumberFont_Outline_Large">
		<Shadow>
			<Offset>
				<AbsDimension x="0" y="-2"/>
			</Offset>
			<Color r="0" g="0" b="0"/>
		</Shadow>
	</Font>
	
	<Button name="FlashTalentTabButtonTemplate" virtual="true">
		<Size x="42" y="42"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parentIcon" parentKey="icon" setAllPoints="true">
					<Size x="27" y="27"/>
					<Anchors>
						<Anchor point="CENTER" relativePoint="CENTER" relativeTo="$parent" x="0" y="0"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<Texture name="$parentIconFrame" parentKey="iconFrame" setAllPoints="true" file="Interface\AddOns\FlashTalent\media\tabicon-frame">
					<TexCoords left="0.0625" right="0.4375" top="0.125" bottom="0.875"/>
				</Texture>
				<Texture name="$parentIconFrameHover" parentKey="iconFrameHover" setAllPoints="true" file="Interface\AddOns\FlashTalent\media\tabicon-frame" hidden="true" alphaMode="ADD">
					<TexCoords left="0.0625" right="0.4375" top="0.125" bottom="0.875"/>
					<Color r="1" g="1" b="1" a="0.5"/>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<Texture name="$parentIconFrameGlow" parentKey="iconFrameGlow" file="Interface\AddOns\FlashTalent\media\tabicon-frame" alphaMode="ADD" hidden="true">
					<Size x="57" y="57"/>
					<Anchors>
						<Anchor point="CENTER" relativePoint="CENTER" relativeTo="$parentIcon" x="0" y="0"/>
					</Anchors>
					<TexCoords left="0.5" right="1" top="0" bottom="1"/>
				</Texture>
				<FontString name="$parentText" parentKey="text" inherits="FlashTalent_NumberFont_Shadow" text="" justifyH="CENTER" hidden="true">
					<Size x="32" y="32"/>
					<Anchors>
						<Anchor point="CENTER" x="0" y="-1"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Animations>
			<AnimationGroup looping="REPEAT" parentKey="glow">
				<Alpha target="$parentIconFrameGlow" fromAlpha="1.0" toAlpha="0.5" duration="1.0" smoothing="IN_OUT" order="1"/>
				<Alpha target="$parentIconFrameGlow" fromAlpha="0.5" toAlpha="1.0" duration="1.0" smoothing="IN_OUT" order="2"/>
			</AnimationGroup>
		</Animations>
		<Scripts>
			<OnLoad>
				self.glow:Play();
				self:RegisterForClicks("LeftButtonUp", "RightButtonUp");
			</OnLoad>
			<OnClick function="FlashTalentTabButton_OnClick"/>
			<OnEnter function="FlashTalentTabButton_OnEnter"/>
			<OnLeave function="FlashTalentTabButton_OnLeave"/>
		</Scripts>
	</Button>

	<Frame name="FlashTalentFrame" parent="UIParent" hidden="true" movable="true" clampedToScreen="true" frameStrata="MEDIUM">
		<Size x="154" y="264"/>
		<Anchors>
			<Anchor point="CENTER" x="180" y="0"/>
		</Anchors>
		<Frames>
			<Frame name="$parentTalents">
				<Size x="106" y="242"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$parent" x="0" y="-22"/>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture>
							<Anchors>
								<Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$parent" x="0" y="0"/>
								<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="$parent" x="0" y="0"/>
							</Anchors>
							<Color r="0" g="0" b="0" a="0.8"/>
						</Texture>
					</Layer>
				</Layers>
				<Frames>
					<Frame name="$parentTier1" id="1" parentKey="tier1" inherits="FlashTalentTierTemplate">
						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="$parent" x="2" y="-2"/>
						</Anchors>
					</Frame>
					
					<Frame name="$parentHonorLevel" parentKey="honorLevel" hidden="true">
						<Size x="106" y="34"/>
						<Anchors>
							<Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$parent" x="0" y="0"/>
						</Anchors>
						<Layers>
							<Layer level="ARTWORK">
								<FontString name="$parentText" parentKey="text" inherits="NumberFont_Outline_Med" text="" justifyH="CENTER">
									<Size x="102" y="42"/>
									<Anchors>
										<Anchor point="CENTER" x="0" y="-2"/>
									</Anchors>
								</FontString>
							</Layer>
						</Layers>
					</Frame>
					
					<Frame name="$parentTier2" id="2" parentKey="tier2" inherits="FlashTalentTierTemplate">
						<Anchors>
							<Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$parent" x="2" y="-36"/>
						</Anchors>
					</Frame>
					<Frame name="$parentTier3" id="3" parentKey="tier3" inherits="FlashTalentTierTemplate">
						<Anchors>
							<Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$parentTier2" x="0" y="0"/>
						</Anchors>
					</Frame>
					<Frame name="$parentTier4" id="4" parentKey="tier4" inherits="FlashTalentTierTemplate">
						<Anchors>
							<Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$parentTier3" x="0" y="0"/>
						</Anchors>
					</Frame>
					<Frame name="$parentTier5" id="5" parentKey="tier5" inherits="FlashTalentTierTemplate">
						<Anchors>
							<Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$parentTier4" x="0" y="0"/>
						</Anchors>
					</Frame>
					<Frame name="$parentTier6" id="6" parentKey="tier6" inherits="FlashTalentTierTemplate">
						<Anchors>
							<Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$parentTier5" x="0" y="0"/>
						</Anchors>
					</Frame>
					<Frame name="$parentTier7" id="7" parentKey="tier7" inherits="FlashTalentTierTemplate">
						<Anchors>
							<Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$parentTier6" x="0" y="0"/>
						</Anchors>
					</Frame>
				</Frames>
			</Frame>
			
			<Button name="$parentReagents" inherits="SecureHandlerClickTemplate,SecureActionButtonTemplate">
				<Size x="55" y="20"/>
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativePoint="TOPLEFT" relativeTo="$parentTalents" x="0" y="2"/>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<FontString name="$parentText" parentKey="text" inherits="NumberFont_Outline_Med" justifyH="LEFT" text="">
							<Size x="70" y="20"/>
							<Anchors>
								<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent" x="0" y="0"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnLoad>
						self:RegisterForClicks("LeftButtonUp", "RightButtonUp");
					</OnLoad>
					<OnEnter function="FlashTalentReagentFrame_OnEnter"/>
					<OnLeave function="FlashTalentReagentFrame_OnLeave"/>
					<PreClick function="FlashTalentReagentFrame_PreClick"/>
				</Scripts>
			</Button>
			
			<Button name="FlashTalentSpecButton" inherits="BrowserButtonTemplate" parentKey="changeDualSpec">
				<Anchors>
					<Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT" relativeTo="$parentTalents" x="3" y="0"/>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK" textureSubLevel="5">
						<Texture parentKey="Icon" file="Interface\Buttons\UI-RefreshButton">
							<Size x="16" y="16"/>
							<Anchors>
								<Anchor point="CENTER" />
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				<Scripts>
					<OnLoad>
						self:SetScale(0.80);
						self:RegisterForClicks("LeftButtonUp", "RightButtonUp");
					</OnLoad>
					<OnClick function="FlashTalentSpecButton_OnClick"/>
					<OnEnter function="FlashTalentSpecButton_OnEnter"/>
					<OnLeave function="FlashTalentSpecButton_OnLeave"/>
				</Scripts>
			</Button>
			
			<Frame name="$parentTabs" parentKey="tabs" clampedToScreen="true">
				<Size x="44" y="242"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$parentTalents" x="2" y="0"/>
				</Anchors>
				<Frames>
					<Button name="$parentPVETalents" id="1" parentKey="pvetalents" inherits="FlashTalentTabButtonTemplate">
						<Anchors>
							<Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$parent" x="0" y="4"/>
						</Anchors>
					</Button>
					<Button name="$parentPVPTalents" id="2" parentKey="pvptalents" inherits="FlashTalentTabButtonTemplate">
						<Anchors>
							<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parentPVETalents" x="0" y="4"/>
						</Anchors>
					</Button>
				</Frames>
			</Frame>
			
			<Button name="$parentSettingsButton" inherits="BrowserButtonTemplate">
				<Anchors>
					<Anchor point="BOTTOM" relativePoint="BOTTOM" relativeTo="$parentTabs" x="0" y="0"/>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK" textureSubLevel="5">
						<Texture parentKey="Icon" file="Interface\Buttons\UI-OptionsButton">
							<Size x="16" y="16"/>
							<Anchors>
								<Anchor point="CENTER" />
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				<Scripts>
					<OnLoad>
						self:SetScale(0.95);
						self:RegisterForClicks("LeftButtonUp", "RightButtonUp");
					</OnLoad>
					<OnEnter function="FlashTalentFrameSettingsButton_OnEnter"/>
					<OnLeave function="FlashTalentFrameSettingsButton_OnLeave"/>
					<OnClick function="FlashTalentFrameSettingsButton_OnClick"/>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnMouseDown function="FlashTalentFrame_OnMouseDown"/>
			<OnMouseUp function="FlashTalentFrame_OnMouseUp"/>
			<OnShow function="FlashTalentFrame_OnShow"/>
			<OnHide function="FlashTalentFrame_OnHide"/>
		</Scripts>
	</Frame>

</Ui>